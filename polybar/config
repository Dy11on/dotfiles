; Jimmy polybar config smile

[colors]
background = ${xrdb:background}
foreground = ${xrdb:foreground}
foreground-alt = ${xrdb:color8}
primary = ${xrdb:color3}
secondary = ${xrdb:color6}
separator = ${xrdb:color10}
alert = #bd2c40




[bar/jimmyBar]
enable-ipc=true
width = 100%
height = 30
radius = 7.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

modules-left = bspwm sep spotify spotify-prev spotify-play-pause spotify-next
modules-center = 
modules-right = volume sep eth sep temperature sep date

; So the bar can go away while im gaming loll
override-redirect = true
wm-restack = bspwm 

cursor-click = pointer
cursor-scroll = ns-resize


font-0 = tewi:pixelsize=10;1
font-1 = wuncon siji:pixelsize=10;1
font-2 = FiraCode Nerd Font Mono:antialias=true:style=regular:size=13;3
font-3 = Twemoji:scale=12;2


[module/date]
type = internal/date
interval = 5

date = %A, %B %d
;date-alt = " %Y-%m-%d"

format = Ôôè 
format-padding = 1

format-prefix-foreground = ${colors.primary}
format-background = ${colors.background}

label = %date%





[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 65

format = Ô®É

label = %temperature-c%
label-foreground = ${colors.foreground-alt}


[module/eth]
type = internal/network
interface = eth0
;might need to change above to make it right interface
interval = 5.0

label-connected = %downspeed:9%
label-connected-foreground = ${colors.foreground-alt} 




[module/volume]
type = internal/pulseaudio

; Sink to be used, if it exists (find using `pacmd list-sinks`, name field)
; If not, uses default sink
sink = alsa_output.pci-0000_12_00.3.analog-stereo

; Use PA_VOLUME_UI_MAX (~153%) if true, or PA_VOLUME_NORM (100%) if false
; Default: true
use-ui-max = true

; Interval for volume increase/decrease (in percent points)
; Default: 5
interval = 5

label-muted = üîá muted
label-muted-foreground = ${colors.foreground-alt} 

click-right = pavucontrol


[module/bspwm]
type=internal/bspwm

label-focused = %icon%
label-focused-background = ${colors.foreground}
label-focused-foreground = ${colors.background}
label-focused-padding = 3

label-occupied = %icon%
label-occupied-padding = 3
label-occupied-foreground = ${colors.foreground}

label-urgent = %icon%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 3

label-empty = %icon%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 3

ws-icon-0 = 1;Ôíâ
ws-icon-1 = 2;Óáò
ws-icon-2 = 3;Óû®
ws-icon-3 = 4;Ô≠Æ
;ws-icon-4 = 5;
[module/sep]
type = custom/text
content = o
content-foreground = ${colors.separator}
content-padding = 2

[module/spotify]
type = custom/script
tail = true
; prefix symbol is shown before the text
format-prefix = "ÔÜº"
format = <label>
exec = ~/.config/polybar/scripts/scroll_spotify_status.sh

[module/spotify-prev]
type = custom/script
exec = echo "ÔÅä"
format = <label>
click-left = playerctl previous spotify

[module/spotify-play-pause]
type = custom/ipc
hook-0 = echo "Ôõ§"
hook-1 = echo "ÓÄÜ"
initial = 1
click-left = playerctl play-pause spotify

[module/spotify-next]
type = custom/script
exec = echo "Ôúê"
format = <label>
click-left = playerctl next spotify
